{% extends 'base.html.twig' %}

{% block title %}Administration des annonces {% endblock %}

{% block body %}
    <div class="container-fluid">
   <h1 class="my-5">Gestion Des utilisateurs </h1>
        <table class="table table-hover">
            <thead>
            <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                   <th>Actions </th>
              </tr>
            </thead>
            <tbody>
               {%  for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="#" class="btn btn-primary"><i class="fas fa-edit">Editer</i></a>
                    <a href="#" class="btn btn-danger"><i class="fas fa-trash">Supprimer</i></a>
                </td>
            </tr>
            {%  endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
